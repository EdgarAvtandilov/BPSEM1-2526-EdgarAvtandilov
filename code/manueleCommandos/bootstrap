no crypto key generate rsa
crypto key zeroize rsa
yes

conf t
hostname toestel
ip domain-name dns.local
ip ssh version 2
crypto key generate rsa modulus 2048
username ansible privilege 15 secret Ansible123
line vty 0 4
login local
transport input ssh
end
write mem

per edge router:
interface g0/0
ip address 10.10.10.2 255.255.255.252
no shutdown
exit
ip route 0.0.0.0 0.0.0.0 10.10.10.1
exit

# op host:
sudo route add -net 10.10.0.0/16 192.168.72.10
